<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.funlearning">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FunLearning">
        <activity android:name=".ContactUs"></activity>
        <activity android:name=".AboutUs" />
        <activity android:name=".TimerService" />
        <activity android:name=".Timer" />
        <activity android:name=".TextToSpeech" />
        <activity android:name=".SpeechToText" />
        <activity android:name=".TextRecognitionActivity" />
        <activity android:name=".TextRecognizer" />
        <activity android:name=".Logout" />
        <activity android:name=".ResultActivity" />
        <activity android:name=".OptionAdapter" />
        <activity android:name=".QuestionAdapter" />
        <activity android:name=".QuestionActivity" />
        <activity android:name=".IconPicker" />
        <activity android:name=".ColorPicker" />
        <activity android:name=".QuizAdaper" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".LoginIntro" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="ocr" />
    </application>

</manifest>